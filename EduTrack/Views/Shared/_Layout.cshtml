<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduTrack</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduTrack.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-icon/bootstrap-icons.min.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    EduTrack
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Left Menu -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Right Profile Dropdown -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle d-flex align-items-center"
                               href="#"
                               id="profileDropdown"
                               role="button"
                               data-bs-toggle="dropdown">

                                <!-- Profile Icon -->
                                <i class="bi bi-person-circle fs-4"></i>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow"
                                aria-labelledby="profileDropdown">

                                <!-- Dark / Light Toggle -->
                                <li class="px-4 py-2">
                                    <div class="d-flex align-items-center justify-content-between">


                                        <!-- Sun Icon -->
                                        <i class="bi bi-sun-fill text-warning"></i>

                                        <!-- Toggle Switch -->
                                        <div class="form-check form-switch mx-2">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   id="themeToggle">
                                        </div>
                                        <!-- Moon Icon -->
                                        <i class="bi bi-moon-fill text-secondary"></i>

                                    </div>
                                </li>

                                <li><hr class="dropdown-divider"></li>
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Profile">
                                            <i class="bi bi-person me-2"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger"
                                           asp-controller="Account"
                                           asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </a>
                                    </li>
                                }


                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2026 - EduTrack - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
